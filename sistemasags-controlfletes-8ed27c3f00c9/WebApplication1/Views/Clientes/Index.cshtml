@using System.Web.Optimization;

@{Layout = "~/Views/Shared/_Layout.cshtml";}

@section css{
    @Styles.Render("~/Assets/tablascss")
}
<head>
    <style>
        /* Ajusta el ancho de la columna de acciones */
        .table th:last-child,
        .table td:last-child {
            width: 1%;
            white-space: nowrap;
        }

        /* Reduce el padding interno de las celdas */
        .table td,
        .table th {
            padding: 0.3rem; /* Ajusta según tus necesidades */
            vertical-align: middle; /* Centra verticalmente */
        }

        /* Reduce el tamaño del botón */
        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
            line-height: 1;
        }
    </style>
</head>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3" style="display:flex; justify-content:space-between">
            <h6 class="m-0 font-weight-bold text-primary" style="padding-top:15px">Reporte de Cliente</h6>
            <button class="btn btn-primary" data-toggle="modal" data-target="#addClienteModal">Agregar <i class='fas fa-user-plus'></i></button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-sm" id="tableClientes" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Nombre</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade" id="addClienteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="fas fa-plus"></i>Agregar Cliente</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="crearClienteForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="nombre_comercial" class="form-label"><i class="fas fa-user"></i>Nombre</label>
                                    <input type="text" id="nombre_comercial" class="form-control border-primary" placeholder="Nombre" required>
                                </div>
                                <!--<div class="mb-3">
                                    <label for="Placa" class="form-label"><i class="fas fa-truck-loading"></i>Placa</label>
                                    <input type="number" id="Placa" class="form-control border-primary" placeholder="Placa" required>
                                </div>-->
                            </div>
                            <!--<div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Numero" class="form-label"><i class="fas fa-truck-loading"></i>Numero</label>
                                    <input type="number" id="Numero" class="form-control border-primary" placeholder="" required>
                                </div>
                            </div>-->
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" onclick="AgregarCliente()">Guardar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="editClienteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="fas fa-edit"></i> Editar Cliente</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editarClienteForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Edit_nombre_comercial" class="form-label"><i class="fas fa-truck-loading"></i> Nombre</label>
                                    <input type="text" id="Edit_nombre_comercial" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="EditActivo">Estado</label>
                                <select id="EditActivo" class="form-control">
                                    <option value="true">Activo</option>
                                    <option value="false">Inactivo</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-warning" onclick="EditarCliente()">Guardar Cambios</button>
                </div>
            </div>
        </div>
    </div>
</div>

    @section js{
        @Scripts.Render("~/Assets/tablasjs")
        @Scripts.Render("~/Assets/clientesjs")
    }
