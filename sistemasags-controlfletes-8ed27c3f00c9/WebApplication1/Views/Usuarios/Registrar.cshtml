@using System.Web.Optimization;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registro";
}

@section css{
    @Styles.Render("~/Assets/Registrarcss")
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="col-lg-10 col-xl-8">
        <h2 class="text-center h1 fw-bold mb-4">Registro</h2>
        <form id="registerForm">
            <div class="row">
                <!-- Primera columna -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label" for="form1Example1c"><i class="fas fa-user"></i> Nombre</label>
                        <input type="text" id="form1Example1c" class="form-control" placeholder="Ingresa tu nombre" />
                        <div class="invalid-feedback">El nombre solo debe contener letras y no puede estar vacío.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="form2Example1c"><i class="fas fa-user"></i> Apellido Paterno</label>
                        <input type="text" id="form2Example1c" class="form-control" placeholder="Ingresa tu apellido paterno" />
                        <div class="invalid-feedback">El apellido paterno solo debe contener letras y no puede estar vacío.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="form3Example1c"><i class="fas fa-user"></i> Apellido Materno</label>
                        <input type="text" id="form3Example1c" class="form-control" placeholder="Ingresa tu apellido materno" />
                        <div class="invalid-feedback">El apellido materno solo debe contener letras y no puede estar vacío.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="formRole"><i class="fas fa-user-tag"></i> Rol</label>
                        <select id="formRole" class="form-control">
                            <option value="Admin">Admin</option>
                            <option value="Chofer">Chofer</option>
                            <option value="Facturacion">Facturación</option>
                        </select>
                    </div>
                </div>

                <!-- Segunda columna -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label" for="form4Example1c"><i class="fas fa-envelope"></i> Correo Electrónico</label>
                        <input type="email" id="form4Example1c" class="form-control" placeholder="ejemplo@correo.com" />
                        <div class="invalid-feedback">Ingresa un correo válido (ejemplo@correo.com).</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="formPhone"><i class="fas fa-phone"></i> Teléfono</label>
                        <input type="tel" id="formPhone" class="form-control" placeholder="123-456-7890" />
                        <div class="invalid-feedback">Ingresa un número de teléfono válido (10 dígitos).</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="formPassword"><i class="fas fa-lock"></i> Contraseña</label>
                        <input type="password" id="formPassword" class="form-control" placeholder="Ingresa tu contraseña" />
                        <div class="invalid-feedback">La contraseña debe tener al menos 8 caracteres, incluyendo una letra mayúscula y un número.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="formRepeatPassword"><i class="fas fa-key"></i> Repite tu contraseña</label>
                        <input type="password" id="formRepeatPassword" class="form-control" placeholder="Confirma tu contraseña" />
                        <div class="invalid-feedback">Las contraseñas deben coincidir.</div>
                    </div>
                </div>
            </div>

            <!-- Botón de registro -->
            <div class="text-center mt-4">
                <button type="button" id="submitBtnAct" onclick="validarFormulario()" class="btn btn-primary btn-lg">Registrarse</button>
                <div id="loadingSpinnerAct" class="mt-3" style="display:none;">
                    <i class="fas fa-spinner fa-spin"></i> Cargando...
                </div>
            </div>
        </form>
    </div>
</div>


@section js {
    @Scripts.Render("~/Assets/Registrarjs")
}
